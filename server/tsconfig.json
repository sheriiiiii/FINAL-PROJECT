{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./",
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx", "jest.config.js"],
  "exclude": ["node_modules"]
}

